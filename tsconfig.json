{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "outDir": "app/js",
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
				"experimentalDecorators": true
    },
    "include": [
        "./app/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        ".git"
    ]
}
